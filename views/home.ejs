<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> POPULAR QUOTES </h1>
		<form action='/author' method='GET'>
			<div class='form-group row'>
				<label for="choice">Search by:</label>
				<select id="choice">
				  <option value="name">Volvo</option>
				  <option value="keyword">Saab</option>
				  <option value="category">Opel</option>
				  <option value="gender">Audi</option>
				</select>
				<label for='firstname' class='col-sm-4 col-form-label'>First Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='Input' required>
				</div>
			</div>
			
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Author</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
	</div>
</div>

<%- include ('templates/footer'); -%>