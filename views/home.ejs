<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> POPULAR QUOTES </h1>
		<form action='/results' method='GET'>
			<div class='form-group row'>
				<label for="choice">Search by:</label>
				<select id="choice" name="choice">
				  <option value="name">First Name</option>
				  <option value="keyword">Keyword</option>
				  <option value="category">Category</option>
				  <option value="gender">Gender</option>
				</select>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='inputt' name='firstname' placeholder='Input' required>
				</div>
			</div>
			
			<div class='form-group row'>
				<div class='col-sm-4'>
					WARNING: If you search by Gender, please type either M for Male or F for Female.
				</div><br>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
	</div>
</div>

<%- include ('templates/footer'); -%>