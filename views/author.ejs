<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1> FOUND AUTHOR </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='col-sm-4 btn btn-info btn-block' onclick='location.href="/";'>Search Again</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
    
    <div class='row'>
        <%author.forEach(function(a){%>
                
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#b<%=a.quoteId%>">
                    <%=a.firstName%> <%=a.lastName%>
                </button>
                
                <div>
                    <h3> <%=a.quote%>  </h3>
                </div>
                <div class="modal fade" id="b<%=a.quoteId%>" tabindex="-1" role="dialog" aria-labelledby="a<%=a.quoteId%>" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="a<%=a.quoteId%>"> <%=a.firstName%> <%=a.firstName%></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <img class='portrait' width='50%' src=<%=a.portrait%> />
        		        <div class='info'>
        		        <h3><%=a.firstName%> <%=a.lastName%></h3>
        		        <div>Born: <%=a.dob%></div>
        		        <div>Dead: <%=a.dod%></div>
        		        <div>Sex: <%=a.sex%></div>
        		        <div>Profession: <%=a.profession%></div>
        		        <div>Country: <%=a.country%></div>
        		        <div><%=a.biography%></div>
        	
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
            <%})%>
	</div>
</div>
